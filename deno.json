{
  "tasks": {
    "dev": "deno run -A --watch dev-server.ts",
    "build": "deno run -A build.ts",
    "preview": "deno run -A server.ts",
    "init-db": "mongosh briconomy scripts/init-db.js",
    "api": "deno run -A api-server.ts",
    "dev-full": "deno run -A dev-server.ts & deno run -A api-server.ts"
  },
  "imports": {
    "react": "https://esm.sh/react@18.2.0",
    "react/jsx-runtime": "https://esm.sh/react@18.2.0/jsx-runtime",
    "react-dom": "https://esm.sh/react-dom@18.2.0",
    "react-dom/client": "https://esm.sh/react-dom@18.2.0/client",
    "react-router-dom": "https://esm.sh/react-router-dom@6.8.1",
    "chart.js": "https://esm.sh/chart.js@4.2.1",
    "react-chartjs-2": "https://esm.sh/react-chartjs-2@5.2.0"
  },
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react", 
    "lib": ["dom", "dom.iterable", "es2020", "deno.ns"],
    "strict": false,
    "noEmit": true
}
}